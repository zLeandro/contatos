{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015", "es2017"],
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "baseUrl": "src",
      "outDir": "dist",
      "paths": {
        "*": ["*"]
      },
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  } 